{
  "name": "react-native-noty",
  "version": "0.4.0",
  "description": "Fast and simple notify for react native (expo supported)",
  "main": "lib/commonjs/index.js",
  "module": "lib/module/index.js",
  "types": "lib/typescript/index.d.ts",
  "react-native": "src/index",
  "source": "src/index",
  "scripts": {
    "test": "npx jest --coverage",
    "lint": "eslint .",
    "typescript": "tsc --noEmit",
    "release": "release-it",
    "example": "yarn --cwd example",
    "pods": "cd example/ios && node -e \"process.exit(require('os').platform() === 'darwin')\" || pod install",
    "bootstrap": "yarn example && yarn && yarn pods"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/divineniiquaye/react-native-noty.git"
  },
  "keywords": [
    "react-native",
    "ios",
    "android",
    "dropdown",
    "alert",
    "dismiss",
    "error",
    "info",
    "warn",
    "success"
  ],
  "author": "Divine Niiquaye Ibok",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/divineniiquaye/react-native-noty/issues"
  },
  "homepage": "https://github.com/divineniiquaye/react-native-noty#readme",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release ${version}",
      "tagName": "v${version}"
    },
    "npm": {
      "publish": true
    },
    "github": {
      "release": true
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": "angular"
      }
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "peerDependencies": {
    "react": "*",
    "react-native": "*"
  },
  "dependencies": {
    "react": "18.2.0",
    "react-native": "0.72.10"
  },
  "devDependencies": {
    "@jest/globals": "29.7.0",
    "@react-native/babel-preset": "0.73.18",
    "@react-native/eslint-config": "0.73.1",
    "@react-native/typescript-config": "0.73.1",
    "@release-it/conventional-changelog": "^8.0.1",
    "@testing-library/jest-native": "5.4.3",
    "@testing-library/react-native": "12.4.5",
    "@types/jest": "29.5.12",
    "@types/react": "18.2.45",
    "@types/react-test-renderer": "18.0.0",
    "babel-jest": "29.7.0",
    "commitlint": "^11.0.0",
    "eslint": "^9.1.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^9.0.11",
    "jest": "29.7.0",
    "prettier": "3.2.5",
    "react-test-renderer": "18.2.0",
    "release-it": "^17.2.1",
    "ts-jest": "29.1.2",
    "ts-node": "10.9.2",
    "typescript": "5.4.5"
  }
}
